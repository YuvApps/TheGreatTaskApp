<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Pages.SignInActivity">

    <TextView
        android:id="@+id/signon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signon_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/signon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signon_title"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="@string/signon_name"
        android:inputType="text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxLength="20" />

    <EditText
        android:id="@+id/signon_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signon_name"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="@string/signon_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/signon_name"
        android:layout_alignEnd="@+id/signon_name"
        android:inputType="textPassword"
        android:maxLength="15" />

    <EditText
        android:id="@+id/signon_passconfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/signon_passconfig"
        android:inputType="textPassword"
        android:layout_below="@+id/signon_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/signon_password"
        android:layout_alignEnd="@+id/signon_password"
        android:maxLength="15" />

    <EditText
        android:id="@+id/signon_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="@string/signon_phone"
        android:inputType="phone"
        android:layout_below="@+id/signon_passconfig"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/signon_passconfig"
        android:layout_alignEnd="@+id/signon_passconfig"
        android:maxLength="10" />

    <Button
        android:id="@+id/signon_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onSignOn"
        android:text="@string/signon_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
