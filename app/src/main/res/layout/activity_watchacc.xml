<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/watchacc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/watchacc_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/watchacc_nametext"
        android:id="@+id/watchacc_nametext"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/watchacc_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/watchacc_namebtn"
        android:layout_toStartOf="@+id/watchacc_namebtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/watchacc_namebtn"
        android:id="@+id/watchacc_namebtn"
        android:layout_alignBottom="@+id/watchacc_nametext"
        android:layout_alignLeft="@+id/watchacc_passwordbtn"
        android:layout_alignStart="@+id/watchacc_passwordbtn"
        android:onClick="onNameChange"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/watchacc_passwordtext"
        android:id="@+id/watchacc_passwordtext"
        android:layout_below="@+id/watchacc_nametext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/watchacc_passwordbtn"
        android:id="@+id/watchacc_passwordbtn"
        android:layout_alignBottom="@+id/watchacc_passwordtext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onPasswordChange"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/watchacc_phonetext"
        android:id="@+id/watchacc_phonetext"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/watchacc_passwordtext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/watchacc_phonebtn"
        android:id="@+id/watchacc_phonebtn"
        android:layout_alignBottom="@+id/watchacc_phonetext"
        android:layout_alignLeft="@+id/watchacc_passwordbtn"
        android:layout_alignStart="@+id/watchacc_passwordbtn"
        android:onClick="onPhoneChange"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/watchacc_exitbtn"
        android:id="@+id/watchacc_exitbtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onDone"/>

</RelativeLayout>